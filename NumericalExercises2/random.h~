#ifndef __Random__
#define __Random__
#include "funzioneBase.h"

class Random {

private:
  int m1,m2,m3,m4,l1,l2,l3,l4,n1,n2,n3,n4;

protected:

public:
  // constructors
  Random();
  // destructor
  ~Random();
  // methods
  void SetRandom(int * , int, int);
  void SaveSeed();
  double Rannyu(void);
  double Rannyu(double min, double max);
  double Gauss(double mean, double sigma);
  double AccRej(BaseFunction * probability, double xmin, double xmax, double fmax);
  // samples a probability distribution between xmin and xmax with maximum value fmax. The distribution must be provided as a pointer to an instance of a sub-class of FunzioneBase (in which the method Eval must be implemented).
};

#endif // __Random__

